<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/smart_menu_spirite_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/smart_menu_up"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smart_menu_spirite_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/smart_menu_up"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/smart_menu_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/smart_menu_bg">

        </FrameLayout>

        <ImageView
            android:id="@+id/smart_menu_spirite_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/smart_menu_down"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/smart_menu_spirite_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/smart_menu_down"/>
</LinearLayout>
